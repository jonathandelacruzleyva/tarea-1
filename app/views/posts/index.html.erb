<h1>Nuestro Blog</h1>
<% @post.each do |post| %>
<h1><%= link_to post.title, post %></h1>
<p> <%= post.content %></p>
<p> <%= link_to "Editar", edit_post_path(post) %> |
    <%= link_to "Borrar", post, :confirm => "estas seguro?", :method =>:delete %>
    </p>
    <hr />
    <% end %>
<p><%= link_to "Agregar nuevo post", new_post_path(post) %></p>

